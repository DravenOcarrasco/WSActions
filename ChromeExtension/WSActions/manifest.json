{
    "manifest_version": 3,
    "name": "WSActions",
    "version": "2.0",
    "description": "Facilita a injeção de scripts personalizados para auxiliar em processos repetitivos entre vários navegadores.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["idScript.js", "libs/jquery-3.5.1.min.js", "libs/popper.min.js", "libs/js/bootstrap.min.js", "libs/css/bootstrap.min.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
